mixin itemImage(data)
	.about-item 
		img.about-image(src=data.image)
		.about-content 
			i.fa.fa-users.about-icon
			span.about-title=data.title
mixin itemNumber(number, text)
		.number-item 
			h4.number-item-count=number 
			span.number-item-text=text
mixin blockService(icon,text, desc)
		.box-list 
			img.box-list-icon(src=icon)
			.box-info
				h4.box-info-title=text
				.box-info-desc=desc
mixin blockWedo(src,title,icon,content)
		.wedo-item
				.wedo-item-header 
					img(src=src).wedo-item-icon
					h3.wedo-item-title=title
					i.wedo-item-arrow(class=icon)
				.wedo-item-content
					.wedo-item-inner=content
mixin teamItem(image,title="",desc="")
	.team-item 
		.team-main
			img.team-image(src=image)
			.team-content
				ul.team-social
					li.team-social-item 
						a.team-social-link(href="#")
							i.fab.fa-facebook-f.team-icon
					li.team-social-item 
						a.team-social-link(href="#")
							i.fab.fa-twitter.team-icon
					li.team-social-item 
						a.team-social-link(href="#")
							i.fab.fa-pinterest.team-icon
					li.team-social-item 
						a.team-social-link(href="#")
							i.fab.fa-instagram.team-icon
		.team-info
			h3.team-name=title
			span.team-position=desc
