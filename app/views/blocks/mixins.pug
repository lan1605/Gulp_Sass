mixin workItem(src,icon,title="Creatively designed",desc="Lorem ipsum dolor sit")
	.work-item 
		img.work-image(src=src)
		.work-content 
			img.work-icon(src=icon)
			h3.work-title=title 
			span.work-desc=desc
mixin peopleItem(src,name,job,desc)
	.people-item 
		img.people-avatar(src=src)
		.people-info 
			h3.people-name=name
			span.people-job=job
			p.people-desc=desc

mixin storyItem(src,date_number,text,title,desc,meta_number1,meta_number2)
	.story-item 	
		.story-media 
			img.story-image(src=src)
			.story-date 	
				span.story-date-number=date_number
				span.story-date-text=text
		h3.story-title=title  
		.story-desc
			p.story-desc-text=desc
		.story-meta  
			.story-meta-item 	
				i.fa.fa-eye.story-meta-icon 
				span.story-meta-number=meta_number1
			.story-meta-item 	
				i.fa.fa-comment.story-meta-icon 
				span.story-meta-number=meta_number2
mixin footerItem(src,title,time) 
	a.footer-blog(href="#")
		img.footer-blog-image(src=src)
		.footer-blog-info 
			h4.footer-blog-title=title
			span.footer-blog-date=time
mixin quoteItem(src,type=false,desc="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Blanditiis numquam nam perferendis? Totam minus, ducimus libero eum nesciunt rerum nostrum id illo dolor hic natus quae architecto consequuntur aspernatur porro.",author="Jon Dee")
	.quote-content
		if type == false
			.quote-icon
				img(src=src)
		else 
			.quote-image
				img(src=src)
		.quote-info 
			p.quote-desc=desc
			span.quote-author=author
